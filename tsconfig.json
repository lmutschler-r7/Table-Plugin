{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["DOM", "ES2019"],
    "strict": true,
    "skipLibCheck": true,

    "jsx": "react-jsx",
    "jsxImportSource": "preact",

    "types": ["@figma/plugin-typings"]
  },
  "include": ["src/**/*", "scripts/**/*"]
}
